<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <padding android:bottom="4dp" android:left="8dp" android:right="8dp" android:top="4dp" />
            <solid android:color="#531616"/>
            <corners android:radius="5dp"/>
            <stroke
                android:width="1dp"
                android:color="#531616"/>
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <padding android:bottom="4dp" android:left="8dp" android:right="8dp" android:top="4dp" />
            <solid android:color="#80FF4444" />
            <corners android:radius="5dp"/>
            <stroke
                android:width="1dp"
                android:color="#80FF4444"/>
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape>
            <padding android:bottom="4dp" android:left="8dp" android:right="8dp" android:top="4dp" />
            <solid android:color="#771A1A" />
            <corners android:radius="5dp"/>
            <stroke
                android:width="1dp"
                android:color="#771A1A"/>
        </shape>
    </item>

</selector>