<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical" android:background="@drawable/layoutroundcustom"
    android:padding="16dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtCount"
            android:text="0"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="#000000"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="현재 순서"
            android:textSize="15sp"
            android:textColor="#888888"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/listMilk"
        android:divider="#00000000"
        android:dividerHeight="0dp"
        android:listSelector="#30000000"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/btnCancel"
        android:background="@drawable/buttonsubcustom"
        android:text="취소"
        android:textSize="15sp"
        android:layout_gravity="right"
        style="?android:attr/borderlessButtonStyle"/>

</LinearLayout>