<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    tools:context=".SignupActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디"
        android:textSize="18sp"
        android:textColor="#444444"
        android:layout_marginBottom="5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:id="@+id/edtID"
            android:background="@drawable/editcustom"
            android:hint="영문자 4~20 글자"
            android:textSize="18sp"
            android:padding="10dp"
            android:textColor="#000000"
            android:layout_marginRight="10dp"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="40dp"
            style="?android:attr/borderlessButtonStyle"
            android:id="@+id/btnDouble"
            android:background="@drawable/buttonsubcustom"
            android:text="중복체크"
            android:textSize="18sp"
            android:textColor="#000000"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호"
        android:textSize="18sp"
        android:textColor="#444444"
        android:layout_marginBottom="5dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/edtPassword"
        android:background="@drawable/editcustom"
        android:hint="영문자 + 숫자 4 ~ 20 글자"
        android:textSize="18sp"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="#000000"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호 확인"
        android:textSize="18sp"
        android:textColor="#444444"
        android:layout_marginBottom="5dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/edtPasswordRetry"
        android:background="@drawable/editcustom"
        android:hint="비밀번호 재입력"
        android:textSize="18sp"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="#000000"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이메일"
        android:textSize="18sp"
        android:textColor="#444444"
        android:layout_marginBottom="5dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/edtEmail"
        android:background="@drawable/editcustom"
        android:hint="helloworld@email.com"
        android:textSize="18sp"
        android:padding="10dp"
        android:textColor="#000000"
        android:inputType="textEmailAddress"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="근무 대리점"
        android:textSize="18sp"
        android:textColor="#444444"
        android:layout_marginBottom="5dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/edtLocation"
        android:background="@drawable/editcustom"
        android:hint="ex) 군포대리점"
        android:textSize="18sp"
        android:padding="10dp"
        android:textColor="#000000"
        android:layout_marginBottom="30dp"/>
    <Button
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:id="@+id/btnSignup"
        style="?android:attr/borderlessButtonStyle"
        android:background="@drawable/buttonmaincustom"
        android:textColor="#FFFFFF"
        android:text="회원가입"
        android:textSize="18sp"
        android:layout_gravity="right"
        android:textStyle="bold"/>
</LinearLayout>