<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:gravity="center"
    android:orientation="vertical"
    android:background="#632121"
    tools:context=".SignupActivity">
    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/milk_icon"
        android:adjustViewBounds="true"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginBottom="40dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="60dp"
            android:id="@+id/edtID"
            android:background="@drawable/editspeicalcustom"
            android:hint="아이디"
            android:textSize="18sp"
            android:paddingLeft="25dp"
            android:paddingRight="10dp"
            android:layout_marginLeft="5dp"
            android:textColor="#000000"
            android:layout_marginBottom="15dp"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            style="?android:attr/borderlessButtonStyle"
            android:id="@+id/btnDouble"
            android:background="@drawable/buttonsubspecialcustom"
            android:text="중복체크"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:textColor="#000000"/>
    </LinearLayout>
    <EditText
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:id="@+id/edtPassword"
        android:background="@drawable/editspeicalcustom"
        android:hint="비밀번호"
        android:textSize="18sp"
        android:paddingLeft="25dp"
        android:paddingRight="10dp"
        android:inputType="textPassword"
        android:layout_marginLeft="5dp"
        android:textColor="#000000"
        android:layout_marginBottom="15dp"/>
    <EditText
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:id="@+id/edtPasswordRetry"
        android:background="@drawable/editspeicalcustom"
        android:hint="비밀번호 확인"
        android:textSize="18sp"
        android:paddingLeft="25dp"
        android:paddingRight="10dp"
        android:inputType="textPassword"
        android:layout_marginLeft="5dp"
        android:textColor="#000000"
        android:layout_marginBottom="15dp"/>
    <EditText
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:id="@+id/edtEmail"
        android:background="@drawable/editspeicalcustom"
        android:hint="이메일"
        android:textSize="18sp"
        android:paddingLeft="25dp"
        android:paddingRight="10dp"
        android:layout_marginLeft="5dp"
        android:textColor="#000000"
        android:layout_marginBottom="15dp"/>
    <EditText
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:id="@+id/edtLocation"
        android:background="@drawable/editspeicalcustom"
        android:hint="근무 대리점 ex) 군포대리점"
        android:textSize="18sp"
        android:paddingLeft="25dp"
        android:paddingRight="10dp"
        android:layout_marginLeft="5dp"
        android:textColor="#000000"
        android:layout_marginBottom="50dp"/>
    <Button
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:id="@+id/btnSignup"
        style="?android:attr/borderlessButtonStyle"
        android:background="@drawable/buttonspeicalcustom"
        android:textColor="#FFFFFF"
        android:text="회원 가입"
        android:layout_marginLeft="5dp"
        android:textSize="18sp"
        android:textStyle="bold"/>
</LinearLayout>