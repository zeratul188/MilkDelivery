<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.gallery.MilkAddActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="배달지 주소"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="10dp">
            <EditText
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/edtName"
                android:background="@drawable/editcustom"
                android:hint="ex) 아이파크 112동 1202호"
                android:textColor="#000000"
                android:layout_marginRight="10dp"
                android:textSize="18sp"/>
            <Button
                android:layout_width="100dp"
                android:layout_height="33dp"
                style="?android:attr/borderlessButtonStyle"
                android:background="@drawable/buttonsubcustom"
                android:id="@+id/btnDouble"
                android:text="중복 체크"
                android:textColor="#000000"
                android:textSize="16sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/chkPassword"
                android:buttonTint="#771A1A"
                android:text="비밀번호 여부"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_marginRight="30dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edtPassword"
                android:background="@drawable/editcustom"
                android:hint="비밀번호"
                android:textColor="#000000"
                android:visibility="gone"
                android:layout_marginRight="10dp"
                android:textSize="18sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <CheckBox
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/chkWeek1"
                android:buttonTint="#771A1A"
                android:text="월요일"
                android:textSize="18sp"
                android:layout_marginRight="5dp"/>
            <EditText
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/editcustom"
                android:id="@+id/edtWeek1"
                android:hint="1 ~ 9"
                android:gravity="center"
                android:textSize="18sp"
                android:maxLength="1"
                android:inputType="numberDecimal"
                android:layout_marginRight="10dp"/>
            <ImageButton
                android:layout_width="36dp"
                android:layout_height="match_parent"
                android:id="@+id/btnWeek1"
                android:src="@drawable/ic_baseline_add_box_24"
                style="?android:attr/borderlessButtonStyle"
                android:layout_gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layoutWeek1"
            android:orientation="vertical"
            android:layout_marginBottom="5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
