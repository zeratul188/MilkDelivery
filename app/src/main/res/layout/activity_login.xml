<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#632121"
    android:padding="10dp"
    android:gravity="center"
    tools:context=".LoginActivity">
    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/milk_icon"
        android:adjustViewBounds="true"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그인"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginBottom="40dp"/>
    <EditText
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:id="@+id/edtID"
        android:background="@drawable/editspeicalcustom"
        android:hint="아이디를 입력해주십시오."
        android:textSize="18sp"
        android:layout_gravity="center"
        android:paddingLeft="25dp"
        android:paddingRight="10dp"
        android:layout_marginLeft="5dp"
        android:textColor="#000000"
        android:layout_marginBottom="15dp"/>
    <EditText
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:id="@+id/edtPassword"
        android:background="@drawable/editspeicalcustom"
        android:hint="비밀번호를 입력해주십시오."
        android:textSize="18sp"
        android:layout_gravity="center"
        android:inputType="textPassword"
        android:paddingLeft="25dp"
        android:paddingRight="10dp"
        android:layout_marginLeft="5dp"
        android:textColor="#000000"
        android:layout_marginBottom="50dp"/>
    <Button
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:id="@+id/btnLogin"
        style="?android:attr/borderlessButtonStyle"
        android:background="@drawable/buttonspeicalcustom"
        android:textColor="#FFFFFF"
        android:text="로그인"
        android:layout_marginLeft="5dp"
        android:textSize="18sp"
        android:textStyle="bold"/>
    <Button
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:id="@+id/btnSignup"
        style="?android:attr/borderlessButtonStyle"
        android:background="@drawable/buttonsubspecialcustom"
        android:text="회원가입"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:textColor="#FFFFFF"/>
</LinearLayout>