<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".ui.gallery.MilkEditActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chkPassword"
            android:buttonTint="#771A1A"
            android:text="비밀번호 여부"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginRight="30dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edtPassword"
            android:background="@drawable/editcustom"
            android:hint="비밀번호"
            android:textColor="#000000"
            android:visibility="gone"
            android:layout_marginRight="10dp"
            android:textSize="18sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/layoutMilk"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            style="?android:attr/borderlessButtonStyle"
            android:id="@+id/btnDelete"
            android:background="@drawable/buttonsubcustom"
            android:text="삭제"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginRight="10dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/btnEdit"
            style="?android:attr/borderlessButtonStyle"
            android:background="@drawable/buttonmaincustom"
            android:text="수정"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"/>
    </LinearLayout>
</LinearLayout>