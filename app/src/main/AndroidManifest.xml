<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mixroidminigames">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_main"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_main_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.gallery.MilkEditActivity"></activity>
        <activity android:name=".ui.gallery.MilkAddActivity" />
        <activity android:name=".PasswordEditActivity"
            android:theme="@style/FullScreenTheme"/>
        <activity android:name=".ProfileEditActivity"
            android:theme="@style/FullScreenTheme"/>
        <activity android:name=".SignupActivity"
            android:theme="@style/FullScreenTheme"/>
        <activity android:name=".LoginActivity"
            android:theme="@style/FullScreenTheme"/>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>